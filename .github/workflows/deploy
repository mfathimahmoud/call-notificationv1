name: Build and Deploy to Azure Web App (Dockerfile)

on:
  push:
    branches:
      - main  # or whichever branch you deploy from

env:
  AZURE_WEBAPP_NAME: call-notificationv1
  AZURE_RESOURCE_GROUP: call-notifi_rg
  IMAGE_NAME: callnotification

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Checkout your source code
      - name: Checkout code
        uses: actions/checkout@v4

      # Log in to Azure using the publish profile you exported from the portal
      - name: Log in to Azure
        uses: azure/login@v1
        with:
          publish-profile: ${{ secrets.AZURE_WEBAPP_PUBLISH_PROFILE }}

      # Build the Docker image locally from your Dockerfile
      - name: Build Docker image
        run: docker build . -t ${{ env.IMAGE_NAME }}:latest

      # Deploy that Docker image directly to the Azure Web App
      - name: Deploy to Azure Web App
        uses: azure/webapps-deploy@v3
        with:
          app-name: ${{ env.AZURE_WEBAPP_NAME }}
          images: ${{ env.IMAGE_NAME }}:latest
